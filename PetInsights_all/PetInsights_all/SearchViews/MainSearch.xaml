<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PetInsights_all.MainSearch"
             BackgroundColor="white">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Main Search Page" TextColor="Black" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
            <Entry x:Name="location" Text="{Binding Location}" IsReadOnly="False" BackgroundColor="Gray" Completed="OnEnterPressed"/>
            <Button Text="Show Pets on Map" BackgroundColor="Blue" Clicked="PetMapButton_OnClicked" VerticalOptions="CenterAndExpand">
            </Button>
            <Button Text="Show Pets in List" BackgroundColor="Blue" Clicked="PetListButton_OnClicked" VerticalOptions="CenterAndExpand">
            </Button>
            <Button Text="Add Pet (for testing)" BackgroundColor="Blue" Clicked="AddPetButton_OnClicked" VerticalOptions="CenterAndExpand">
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>